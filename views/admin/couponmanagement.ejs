      <!-- partial -->
      <div class="row p-3 view-Products">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Coupon Management</h4>
              <div class="table-responsive">
                <form class="nav-link mt-2 mt-md-0 d-lg-flex search">
                  <div style="display: flex;">                    
                    <button type="button" class="btn btn-primary btn-addCouponModal" data-bs-toggle="modal"
                      data-bs-target="#couponUploadModal" style="width: 100px;margin-left: 10px; height: 38px">
                      Add New Coupon
                    </button>
                  </div>
                </form>
                <table class="table">
                  <thead>
                    <tr >
                      <th style="color: white;">No</th>
                      <th style="color: white;">Coupon Code</th>
                      <th style="color: white;">Discount Type</th>
                      <th style="color: white;">Discount Value</th>
                      <th style="color: white;">Minimum Purchase</th>
                      <th style="color: white;">Start Date</th>
                      <th style="color: white;">Expiry Date</th>
                      <th style="color: white;">Usage Limit</th>
                      <th style="color: white;">Status</th>
                      <th style="color: white;">Update</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(!val){ %>
                      <p>
                        <%= msg %>
                      </p>
                      <% }else{ %>
                        <% coupons.forEach((data,index)=>{ %>
                          <tr style="color: white;">
                            <td>
                              <%= index+1 %>
                            </td>
                            <td>
                              <%= data.couponCode %>
                            </td>
                            <td>
                              <%= data.discountType %>
                            </td>
                            <td>
                              <%= data.discountValue %>
                            </td>
                            <td>
                              <%= data.minimumPurchase %>
                            </td>
                            <td>
                              <%= new Date(data.startDate).toLocaleDateString() %>
                            </td>
                            <td>
                              <%= new Date(data.expiryDate).toLocaleDateString() %>
                            </td>
                            <td>
                              <%= data.usageLimit %>
                            </td>
                            <td>
                              <button style="background-color: transparent;" data-id="<%= data._id %>"
                                class="badge btnActiveAndInactive <%= data.isActive ? 'badge-outline-success' : 'badge-outline-danger' %>">
                                <%= data.isActive ? 'Active' : 'Inactive' %>
                              </button>
                            </td>

                            <td>
                              <a href="#" class="badge badge-outline-warning update-coupon-btn"
                                data-id="<%= data._id %>" data-code="<%= data.couponCode %>"
                                data-type="<%= data.discountType %>" data-value="<%= data.discountValue %>"
                                data-minpurchase="<%= data.minimumPurchase %>"
                                data-maxpurchase="<%= data.maximumPurchase %>" data-startdate="<%= data.startDate %>"
                                data-expirydate="<%= data.expiryDate %>" data-usagelimit="<%= data.usageLimit %>"
                                data-isactive="<%= data.isActive %>" data-bs-toggle="modal"
                                data-bs-target="#updateCouponModal">
                                Update
                              </a>
                            </td>


                          </tr>
                          <% }) %>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <!-- Previous Page Link -->
            <% if (currentPage> 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% } %>

                <!-- Page Number Links -->
                <% for (let i=1; i <=totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>

                    <!-- Next Page Link -->
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                        </a>
                      </li>
                      <% } %>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Modal for Adding New Coupon -->
    <div class="modal fade" id="couponUploadModal" tabindex="-1" aria-labelledby="couponUploadModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="couponUploadModalLabel">Add New Coupon</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="addCouponForm">
              <div class="mb-3">
                <label for="couponCode" class="form-label">Coupon Code</label>
                <div class="input-group">
                  <input style="color: white;" type="text" class="form-control" id="couponCode" name="couponCode"
                    placeholder="Enter coupon code" required />
                  <button type="button" class="btn btn-secondary" id="generateCoupon">Generate</button>
                </div>
                <p id="couponCodeError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="discountType" class="form-label">Discount Type</label>
                <select class="form-select" id="discountType" name="discountType" required>
                  <option  value="">Select discount type</option>
                  <option  value="percentage">Percentage</option>
                  <option  value="fixed">Fixed</option>
                </select>
                <p id="discountTypeError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="discountValue" class="form-label">Discount Value</label>
                <input style="color: white;" type="number" class="form-control" id="discountValue" name="discountValue"
                  placeholder="Enter discount value" min="0" required />
                <p id="discountValueError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="minimumPurchase" class="form-label">Minimum Purchase</label>
                <input style="color: white;" type="number" class="form-control" id="minimumPurchase"
                  name="minimumPurchase" placeholder="Enter minimum purchase amount" min="0" required />
                <p id="minimumPurchaseError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="maximumPurchase" class="form-label">Maximum Purchase</label>
                <input style="color: white;" type="number" class="form-control" id="maximumPurchase"
                  name="maximumPurchase" placeholder="Enter maximum purchase amount" min="0" />
                <p id="maximumPurchaseError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input style="color: white;" type="date" class="form-control" id="startDate" name="startDate"
                  required />
                <p id="startDateError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="expiryDate" class="form-label">Expiry Date</label>
                <input style="color: white;" type="date" class="form-control" id="expiryDate" name="expiryDate"
                  required />
                <p id="expiryDateError" class="error-message text-danger"></p>
              </div>
              <div class="mb-3">
                <label for="usageLimit" class="form-label">Usage Limit</label>
                <input style="color: white;" type="number" class="form-control" id="usageLimit" name="usageLimit"
                  placeholder="Enter usage limit" min="1" required />
                <p id="usageLimitError" class="error-message text-danger"></p>
              </div>
              <div class="form-check">
                <input style="color: white;" class="form-check-input" type="checkbox" id="isActive" name="isActive"
                  checked />
                <label class="form-check-label" for="isActive">Active</label>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveCoupon">Save Coupon</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>


    <!-- update Coupon -->
    <div class="modal fade" id="updateCouponModal" tabindex="-1" aria-labelledby="updateCouponModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateCouponModalLabel">Update Coupon</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="updateCouponForm">
              <div class="mb-3">
                <label for="updateCouponCode" class="form-label">Coupon Code</label>
                <div class="input-group">
                  <input x type="text" class="form-control" id="updateCouponCode" name="updateCouponCode"
                    placeholder="Enter coupon code" required style="color: white;" />
                  <!-- <button type="button" class="btn btn-secondary" id="generateCoupon">Generate</button> -->
                </div>
                <p id="updateCouponCodeError" class="update-error-message text-danger"></p>
              </div>

              <div class="mb-3">
                <label for="updateDiscountType" class="form-label">Discount Type</label>
                <select class="form-select" id="updateDiscountType" name="updateDiscountType" required>
                  <option  value="">Select discount type</option>
                  <option  value="percentage">Percentage</option>
                  <option  value="fixed">Fixed</option>
                </select>
                <p id="updateDiscountTypeError" class="update-error-message text-danger"></p>

              </div>

              <div class="mb-3">
                <label for="updateDiscountValue" class="form-label">Discount Value</label>
                <input style="color: white;" type="number" class="form-control" id="updateDiscountValue"
                  name="updateDiscountValue" placeholder="Enter discount value" min="0" required />
                <p id="updateDiscountValueError" class="update-error-message text-danger"></p>

              </div>

              <div class="mb-3">
                <label for="updateMinimumPurchase" class="form-label">Minimum Purchase</label>
                <input style="color: white;" type="number" class="form-control" id="updateMinimumPurchase"
                  name="updateMinimumPurchase" placeholder="Enter minimum purchase amount" min="0" required />
                <p id="updateMinimumPurchaseError" class="update-error-message text-danger"></p>
              </div>

              <div class="mb-3">
                <label for="updateMaximumPurchase" class="form-label">Maximum Purchase</label>
                <input style="color: white;" type="number" class="form-control" id="updateMaximumPurchase"
                  name="updateMaximumPurchase" placeholder="Enter maximum purchase amount" min="0" />
                <p id="updateMaximumPurchaseError" class="update-error-message text-danger"></p>
              </div>

              <div class="mb-3">
                <label for="updateStartDate" class="form-label">Start Date</label>
                <input style="color: white;" type="date" class="form-control" id="updateStartDate"
                  name="updateStartDate" required />
                <p id="updateStartDateError" class="update-error-message text-danger"></p>
              </div>

              <div class="mb-3">
                <label for="updateExpiryDate" class="form-label">Expiry Date</label>
                <input style="color: white;" type="date" class="form-control" id="updateExpiryDate"
                  name="updateExpiryDate" required />
                <p id="updateExpiryDateError" class="update-error-message text-danger"></p>
              </div>

              <div class="mb-3">
                <label for="updateUsageLimit" class="form-label">Usage Limit</label>
                <input style="color: white;" type="number" class="form-control" id="updateUsageLimit"
                  name="updateUsageLimit" placeholder="Enter usage limit" min="1" required />
                <p id="updateUsageLimitError" class="update-error-message text-danger"></p>
              </div>

              <div class="form-check">
                <input style="color: white;" class="form-check-input" type="checkbox" id="updateIsActive"
                  name="updateIsActive" checked />
                <label class="form-check-label" for="updateIsActive">
                  Active
                </label>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveUpdatedCoupon">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/admin/coupon.js"></script>
  <script src="https://unpkg.com/cropperjs@1.5.12/dist/cropper.min.js"></script>
