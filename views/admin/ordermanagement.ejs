      <!-- partial -->
      <div class="custom-table-container">
        <h3 class="text-center">Order Details</h3>
        <div class="d-flex justify-content-start">
          <table class="table table-bordered custom-table mt-5">
            <thead class="thead-dark">
              <tr>
                <th>Order Number</th>
                <th>Username</th>
                <th>Date</th>
                <th>Price</th>
                <th>Payment Status</th>
                <th>Status</th>
                <th>Payment Mode</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order, index) { %>
                <tr>
                  <td>
                    <%= (index + 1).toString().padStart(3, '0' ) %>
                  </td>
                  <td>
                    <%= order.userId.userName %>
                  </td>
                  <td>
                    <%= new Date(order.createdAt).toLocaleDateString('en-US', { day: '2-digit' , month: 'long' ,
                      year: 'numeric' }) %>
                  </td>
                  <td>
                    <%= order.totalAmount %>
                  </td>
                  <td>
                   <%= console.log(order.status)%>
                   
                    <%if( order.status === "pending"){%>
                      <span class="badge badge-danger">Pending</span>
                      <%}else if(order.status === "Cancelled"){%>
                        <span class="text-danger">Unpaid</span>
                        <% }else if(order.status === "completed"){ %>
                          <span class="badge badge-success">Paid</span>
                          <%} %>
                  </td>
                  <td>
                    <%= order.status %>
                  </td>
                  <td>
                    COD
                  </td>
                  <td>
                    <button class="btn btn-primary btn-sm viewbtn"
                      onclick="window.location.href='/admin/vieworder/<%= order._id %>'">
                      View
                    </button>

                  </td>
                </tr>

                <!-- Display Product Details for each order -->
                <% order.products.forEach(function(product) { %>
                  <tr>
                    <td colspan="8">
                      <strong>Product:</strong>
                      <%= product.productId.name %> <br>
                        <strong>Price:</strong> ₹<%= product.price %> <br>
                          <strong>Quantity:</strong>
                          <%= product.quantity %>
                    </td>
                  </tr>
                  <% }); %>
                    <% }); %>
            </tbody>
          </table>
        </div>
