  <body>
  <%- include("./layouts/header.ejs") %>
      
    <div class="login-container">
    <h2>FORGOT PASSWORD</h2>
    <form id="loginform">
        <label for="newPassword"></label>
        <div class="password-container">
            <input type="password" name="newPassword" id="newPassword" placeholder="Enter the new Password">
            <i class="fa fa-eye-slash toggle-password" id="togglePassword" onclick="togglePasswordVisibility()"></i>
        </div>
        <p id="newPasswordError" class="errormessage"></p>

        <label for="confirmPassword"></label>
        <div class="password-container">
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your new password">
            <i class="fa fa-eye-slash toggle-password" id="toggleConfirmPassword" onclick="toggleConfirmPasswordVisibility()"></i>
        </div>
        <p id="confirmPasswordError" class="errormessage"></p>

        <button id="loginBtn" class="fSubmit">Submit</button>
    </form>
</div>


